public class Solution extends GuessGame {
    public int guessNumber(int n) 
    {
        int left = 1, right = n;
        int mid;
        while(left < right) 
        {
            mid = right + (left - right)/ 2);
            if(guess(mid) == 0)
                return mid;
            else if(guess(mid) == 1)
                left = mid + 1;
            else 
                right = mid-1;
        }
        return (int)left;
    }
}

==============================================================
==============================================================

public class Solution extends GuessGame {
    public int guessNumber(int n) 
    {
        int left = 1, right = n;
        int mid;
        while(left < right) 
        {
            mid = left/2 + right/ 2;
            if(guess(mid) == 0)
                return mid;
            else if(guess(mid) == 1)
                left = mid + 1;
            else 
                right = mid-1;
        }
        return left;
    }
}
