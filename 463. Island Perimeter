class Solution {
    public int islandPerimeter(int[][] grid) {
        int gridCount=0;
        int redundantside=0;        
        
        for(int i=0;i<grid.length;i++)
            for(int j=0;j<grid[i].length;j++)
                if(grid[i][j]==1)
                {
                    gridCount++;
                    if( i>=1 && grid[i-1][j]==1) redundantside++;
                    if( j>=1 && grid[i][j-1]==1) redundantside++;
                }
        return gridCount*4-redundantside*2;
    }
}
