public class Solution {
    public char findTheDifference(String s, String t) {
        
        //用陣列模擬dictionary. or hashTable
        //開一個26空格的array,代表每一個字母使用的狀況.
        
        char ans='a';
        int map[]=new int[26];
        for(int i=0;i<s.length();i++)
        {
            map[ s.charAt(i) - 'a']++;
        }
        
        for(int i=0;i<t.length();i++)
        {
            map[t.charAt(i) - 'a']--;
            if(map[t.charAt(i) - 'a']<0)
            {
                ans = t.charAt(i);
                break;
            }
        }
        
        return ans;
        
    }
    
}

